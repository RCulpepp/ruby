<div class='pure-g wrapper'>
	<div class='pure-u-3-4'></div>
	<div class='pure-u-1-4'>
		<form action='/sessions/:id' method='post'>
			<input name="authenticity_token" type="hidden" value="{{form_authenticity_token }}" />
			<input type='hidden' value='delete' name="_method">
			<button type='submit' class='pure-button'>Logout</button>
		</form>
		<a href='/ideas'>Ideas</a>
	</div>
	<h3 class='pure-u-1-5'>
		<a href='/users/<%= @idea[:user_id] %>'><%= @idea[:alias] %></a> says:
	</h3>
	<p class='pure-u-4-5'>
		<%= @idea.content %>
	</p>
	<h3 class='pure-u-1'>People who liked this idea</h3>
	<table class='pure-u-1 pure-table pure-table-striped'>
		<thead>
			<tr>
				<td>Alias</td>
				<td>Name</td>
			</tr>
		</thead>
		<tbody>
		<% @likes.each do |like| %>
			<tr>
				<td><a href='/users/<%= like.id %>'><%= like[:alias] %></a></td>
				<td><%= like[:name] %></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>